/* Responsive styles */

@media (max-width: 1024px) {
  .dashboard-content {
    flex-direction: column;
    height: auto;
  }

  .sidebar {
    width: 100%;
    height: auto;
    padding: 15px;
    border-right: none;
    border-bottom: 1px solid #ddd;
  }

  .dashboard-main-content {
    padding: 15px;
  }

  .metrics-cards {
    flex-wrap: wrap;
    justify-content: center;
  }

  .metric-card {
    max-width: 45%;
    margin-bottom: 15px;
  }

  .charts-section {
    flex-direction: column;
  }

  .line-chart-container,
  .pie-chart-container {
    width: 100% !important;
    height: 300px !important;
    margin-bottom: 20px;
  }

  .bottom-section {
    flex-direction: column;
  }

  .recent-activities,
  .employee-status-table {
    width: 100%;
    margin-bottom: 20px;
  }
}

@media (max-width: 768px) {
  .sidebar {
    padding: 10px;
  }

  .metric-card {
    max-width: 100%;
  }

  .line-chart-container,
  .pie-chart-container {
    height: 250px !important;
  }

  .top-bar {
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
  }

  .top-bar-left {
    font-size: 1.25rem;
  }

  .top-bar-right {
    width: 100%;
    display: flex;
    justify-content: flex-end;
  }

  .employee-status-table table,
  .recent-activities ul {
    font-size: 0.9rem;
  }
}

@media (max-width: 480px) {
  .sidebar {
    width: 100%;
    padding: 5px;
  }

  .dashboard-main-content {
    padding: 10px;
  }

  .top-bar-left {
    font-size: 1rem;
  }

  .employee-status-table table,
  .recent-activities ul {
    font-size: 0.8rem;
  }

  .modal-content {
    width: 90%;
    padding: 15px;
  }

  .employee-status-table table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
  }

  .recent-activities ul {
    padding-left: 10px;
  }
}
